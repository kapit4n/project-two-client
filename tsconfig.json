{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "rootDir":"./",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "typeRoots": [
      ".src/types"
    ],
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "src",
    "jest.config.js",
    "webpack.config.ts",
    "src/react-app-env.d.ts", "locales", "src/.storybook", "main.js", "src/stories", ".storybook/Tests"
  ],
  "exclude": [
    "node_modules",
    "index.ts",
    "./src/generated/*",
    "build",
    "dist",
  ],
  "compileOnSave": false
}
